@model Hotels_Booking.Models.Online_Booking;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Online Booking</h4>
<hr/>
<form asp-action="Insert" class="row g-3">
    <div class="col-md-6">
        <label for="CustomerName" class="form-label">CustomerName:-</label>
        <input type="text" class="form-control" asp-for="C_Name" placeholder="Enter Your Name">
    </div>
    <div class="col-md-6">
        <label for="HotelName" class="form-label">HotelName:-</label>
        @Html.DropDownList("H_Id",((List<SelectListItem>)ViewBag.lst),"Select Hotel Name", new {@class = "form-select"})
    </div>
    <div class="col-md-6">
        <label for="Address" class="form-label">Address:-</label>
        <input type="text" class="form-control" asp-for="C_Add1" placeholder="Enter Your City">
    </div>
    <div class="col-md-6">
        <label for="Address 2" class="form-label">Address 2:-</label>
        <input type="text" class="form-control" asp-for="C_Add2" placeholder="Enter Your State Name">
    </div>
    <div class="col-md-6">
        <label for="Customer Email" class="form-label">Customer Email:-</label>
        <input type="text" class="form-control" asp-for="C_Email" placeholder="Enter Your EmailID">
    </div>
    <div class="col-md-6">
        <label for="Customer Mo" class="form-label">Customer Mo:-</label>
        <input type="text" class="form-control" asp-for="C_Mobile" placeholder="Enter Your Mobile.No.">
    </div>
    <div class="col-md-6">
        <lable for="Date Of Birth" class="form-label">Date Of Birth:-</lable>
        <input type="date" class="form-control" asp-for="C_DoB" placeholder="Enter Your Date Of Birth">
    </div>
    <div class="col-md-6">
        <lable for="Documents" class="form-label">Documents:-</lable>
        <input type="file" class="form-control" asp-for="C_Document" placeholder="Upload Your Documents">
    </div>
    <div class="col-md-6">
        <lable for="Gender" class="form-label">Gender:-</lable>
    </div>
    
    <div class="row">
        <div class="col-3">

            <lable><input class="form-check" type="radio" value="Male" asp-for="C_Gender">Male</lable>
        </div>
       <div class="col-3">
           
            <lable><input class="form-check" type="radio" value="Female" asp-for="C_Gender">Female</lable>
       </div>
        <div class="col-3">
           
            <lable><input class="form-check" type="radio" value="Other" asp-for="C_Gender">Other</lable>
        </div>
    </div> 
  
    <div class="input-group mb-6">
      @*  <lable for="inputISActive" class="form-label">ISActive:-</lable>*@
            ISActive:-
        <input type="checkbox" class="form-check" asp-for="ISActive">
    </div>  

    <div class="col-6">
        <input type="submit" value="Save" class="btn btn-primary"/>
       @* <button type="submit" asp-action="Insert" asp-controller="Crud_" class="btn btn-primary">Save</button>*@
        <input type="button" value="Cancel" class="btn btn-danger" onclick="location.href='@Url.Action("list", "Crud_")'"/>
    </div>
</form>
